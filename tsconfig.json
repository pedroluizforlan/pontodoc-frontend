{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "paths": {
      "@spartan-ng/helm/icon": [
        "./libs/ui/icon/src/index.ts"
      ],
      "@spartan-ng/helm/utils": [
        "./libs/ui/utils/src/index.ts"
      ],
      "@spartan-ng/helm/card": [
        "./libs/ui/card/src/index.ts"
      ],
      "@spartan-ng/helm/button": [
        "./libs/ui/button/src/index.ts"
      ],
      "@spartan-ng/helm/dialog": [
        "./libs/ui/dialog/src/index.ts"
      ],
      "@spartan-ng/helm/label": [
        "./libs/ui/label/src/index.ts"
      ],
      "@spartan-ng/helm/input": [
        "./libs/ui/input/src/index.ts"
      ],
      "@spartan-ng/helm/form-field": [
        "./libs/ui/form-field/src/index.ts"
      ],
      "@spartan-ng/helm/select": [
        "./libs/ui/select/src/index.ts"
      ],
      "@spartan-ng/helm/checkbox": [
        "./libs/ui/checkbox/src/index.ts"
      ],
      "@spartan-ng/helm/table": [
        "./libs/ui/table/src/index.ts"
      ],
      "@spartan-ng/helm/badge": [
        "./libs/ui/badge/src/index.ts"
      ],
      "@spartan-ng/helm/spinner": [
        "./libs/ui/spinner/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
